{
    "widgets":[{"name":"context-menu",
                "type":"semantic",
                "controller":"knot.core.controllers.context_menu_controller.ContextMenuController",
                "childWidgets":[{"name":"entry",
                                 "type":"semantic",
                                 "controller":"knot.core.controllers.menu_entry_controller.MenuEntryController"}]},
               {"name":"div",
                "painter":"knot.core.painters.container_painter.ContainerPainter",
                "controller":"knot.core.controllers.div_controller.DivController"},
               {"name":"img",
                "painter":"knot.core.painters.image_painter.ImagePainter",
                "controller":"knot.core.controllers.image_controller.ImageController"},
               {"name":"p",
                "painter":"knot.core.painters.multi_line_text_painter.MultiLineTextPainter",
                "req-mods":[{"class":"knot.core.mods.watch_content.WatchContent"}]},
               {"name":"text",
                "painter":"knot.core.painters.text_painter.TextPainter",
                "req-mods":[{"class":"knot.core.mods.watch_content.WatchContent"}]},
               {"name":"tooltip",
                "type":"semantic",
                "controller":"knot.core.controllers.tooltip_controller.TooltipController"}],
    "mods":[{"name":"display-if",
             "class":"knot.core.mods.display_if.DisplayIf",
             "token":"$arg",
             "args":[{"type":"expr"}]},
            {"name":"for",
             "class":"knot.core.mods.for_loop.ForLoop",
             "token":"$arg in $arg",
             "args":[{"type":"text"},
                     {"type":"value"},
                     {"type":"config"},
                     {"type":"tokens"},
                     {"type":"scope"}]},
            {"name":"when",
             "class":"knot.core.mods.attach_to_signal.AttachToSignal",
             "token":"$arg -> $arg",
             "args":[{"type":"text"},
                     {"type":"value-list"}]},
            {"name":"style",
             "class":"knot.core.mods.set_styling.SetStyling",
             "token":"$arg",
             "args":[{"type":"text"}]}],
    "positioning":[{"name":"center",
                    "class":"knot.core.positioning.center.Center"},
                   {"name":"from-neighbor",
                    "class":"knot.core.positioning.from_neighbor.FromNeighbor"}],
    "sizing":[{"name":"fixed",
               "class":"knot.core.sizing.fixed.Fixed"},
              {"name":"shrink",
               "class":"knot.core.sizing.use_size_hint.UseSizeHint"},
              {"name":"shrink-to-contents",
               "class":"knot.core.sizing.shrink_to_contents.ShrinkToContents"},
              {"name":"stretch",
               "class":"knot.core.sizing.stretch.Stretch"}],
    "services":[{"name":"fileLoader",
                 "class":"knot.core.services.file_loader.FileLoader"},
                {"name":"window",
                 "class":"knot.core.services.window.Window"}]
}